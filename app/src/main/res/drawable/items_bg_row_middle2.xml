<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#F29149" android:endColor="#F29149" android:angle="90.0" android:centerColor="#F29149"/>
            <stroke android:width="@dimen/dimens_item_border_width" android:color="@color/color_item_border"/>
            <padding android:left="@dimen/dimens_item_padding_left" android:top="@dimen/dimens_item_padding_top" android:right="@dimen/dimens_item_padding_right" android:bottom="@dimen/dimens_item_padding_bottom"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="#F29149" android:endColor="#F29149" android:angle="90.0" android:centerColor="#F29149"/>
            <stroke android:width="@dimen/dimens_item_border_width" android:color="@color/color_item_border"/>
            <padding android:left="@dimen/dimens_item_padding_left" android:top="@dimen/dimens_item_padding_top" android:right="@dimen/dimens_item_padding_right" android:bottom="@dimen/dimens_item_padding_bottom"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/white2" android:endColor="@color/white2" android:centerColor="@color/white2" android:angle="90.0"/>
            <stroke android:width="@dimen/dimens_item_border_width" android:color="@color/color_item_border"/>
            <padding android:left="@dimen/dimens_item_padding_left" android:top="@dimen/dimens_item_padding_top" android:right="@dimen/dimens_item_padding_right" android:bottom="@dimen/dimens_item_padding_bottom"/>
        </shape>
    </item>
</selector>
